{% extends "MADExperienceBundle::gathering_place_layout.html.twig" %}

{% block content %}

    <h1>Escribir experiencia</h1>

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}

	<div class="row-fluid">
        <form action="{{ path('mad_experience_write_experience') }}" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}

            <input type="submit" value="Guardar y compartir con Ross" name="share" />
            <input type="submit" value="Guardar y compartir con todas" name="share" />
        </form>
	</div>

{% endblock content %}

