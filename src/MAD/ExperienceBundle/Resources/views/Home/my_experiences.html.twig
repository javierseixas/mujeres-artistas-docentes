{% extends "MADExperienceBundle::gathering_place_layout.html.twig" %}

{% block body %}
    <h1>Mis Experiencias</h1>

    <div><a href="{{  path('mad_experience_write_experience') }}">Escribir una experiencia</a></div>




    <h3>Experiencies libres</h3>
    <ul>
        {% for freeExperience in freeExperiences %}
            <li><a href="{{ path('mad_experience_read_experience', {experienceId : freeExperience.id}) }}">{{ freeExperience.account }}</a> en {{ freeExperience.createdAt | date('m/d/Y') }}</li>
        {% endfor %}
    </ul>

{% endblock body %}