{% extends "MADExperienceBundle::gathering_place_layout.html.twig" %}

{% block title %}Mis Experiencias | Mujeres Artistas Docentes{% endblock %}

{% block content %}

<h1>Mis Experiencias</h1>


<div class="row">
    <div class="span12">
        <h3>Experiencias para la investigación</h3>
        <ul class="investigation-experiences">
            {% for subject in subjectsList %}
            <li><h4>{{ subject.title }}</h4>
                <ul>
                    {% for question in subject.questions %}
                    <li>{{ question.title }}
                        {% if question.experiences.current.user is not null %}
                            por mi en {{ question.experiences.current.createdAt | date('d/m/Y') }} <a href="{{ path('mad_experience_read_experience', {experienceId : question.experiences.current.id}) }}">Leer</a>
                        {% else %}
                            <a href="{{ path('mad_experience_answer_question', {questionId: question.id}) }}">¿Cúal es tu experiencia?</a>
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>

            </li>
            {% else %}
                <p>En breve recibirás algunas preguntas</p>
            {% endfor %}
        </ul>
    </div>

</div>

<div class="row">
    <div class="span6">
        <h3>Experiencias libres</h3>
    </div>
    <div class="span6">
        <div><a href="{{  path('mad_experience_write_experience') }}">Escribir una experiencia</a></div>
    </div>
    <div class="span12">
        <ul class="investigation-experiences">
            {% for freeExperience in freeExperiences %}
                <li><a href="{{ path('mad_experience_read_experience', {experienceId : freeExperience.id}) }}">{{ freeExperience.account }}</a> en {{ freeExperience.createdAt | date('m/d/Y') }}</li>
            {% else %}
                <li>No has escrito ninguna experiencia. <a href="{{  path('mad_experience_write_experience') }}">¿Quieres escribir alguna?</a></li>
            {% endfor %}
        </ul>
    </div>
</div>

{% endblock content %}