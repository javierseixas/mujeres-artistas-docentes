{% extends "MADExperienceBundle::gathering_place_layout.html.twig" %}

{% block body %}

    <h1>Escribir experiencia sobre {{ question.title }}</h1>

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}

	<div class="row-fluid">
        <form action="{{ path('mad_experience_answer_question', {questionId:question.id}) }}" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}

            <input type="submit" />
        </form>
	</div>

{% endblock body %}

